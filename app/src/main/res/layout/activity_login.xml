<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/grad">


    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="105dp"
        android:fontFamily="@font/alegreya_sans_sc_bold_italic"
        android:text="Login Here"
        android:textColor="#050505"
        android:textSize="40sp"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/et_UserNameLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <EditText
        android:id="@+id/et_UserNameLogin"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="208dp"
        android:hint="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_PasswordLogin"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:password="true"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_UserNameLogin" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="424dp"
        android:text=" "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Login"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="28dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_PasswordLogin" />

    <Button
        android:id="@+id/bt_Login_Register"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:layout_marginLeft="232dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="468dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="472dp"
        android:text="Don't have an account? You can sign up here!"
        app:layout_constraintEnd_toStartOf="@+id/bt_Login_Register"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>