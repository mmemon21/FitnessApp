<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestedActivity">

    <TextView
        android:id="@+id/suggest"
        android:layout_width="208dp"
        android:layout_height="46dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="52dp"
        android:text="What would you like to suggest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/videobt"
        android:layout_width="208dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        android:text="Video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggest" />

    <Button
        android:id="@+id/nutritionbt"
        android:layout_width="208dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:text="Nutrition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videobt" />

    <Button
        android:id="@+id/backbt"
        android:layout_width="208dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="44dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalsbt" />

    <Button
        android:id="@+id/goalsbt"
        android:layout_width="208dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:text="Goals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nutritionbt" />


</androidx.constraintlayout.widget.ConstraintLayout>